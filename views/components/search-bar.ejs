<!-- start hotel booking -->
<div class="hotel_booking_area" style="display: none;">
    <div class="container">
        <div class="hotel_booking">
            <form id="form1" role="form" action="#" class="">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="room_book border-right-dark-1">
                        <h6>Trouvez votre </h6>
                        <p>hôtel</p>
                    </div>
                </div>
                <div class="form-group col-lg-2 col-md-2 col-sm-2">
                    <div class="input-group border-bottom-dark-2">
                        <input class="date-picker" id="datepicker" placeholder="Arrivée" type="text"/>
                        <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                <div class="form-group col-lg-2 col-md-2 col-sm-2">
                    <div class="input-group border-bottom-dark-2">
                        <input class="date-picker" id="datepicker1" placeholder="Départ" type="text"/>
                        <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="row">
                        <div class="form-group col-lg-3 col-md-3 col-sm-3 icon_arrow">
                            <div class="input-group border-bottom-dark-2">
                                <select class="form-control" name="room" id="room">
                                  <option selected="selected" disabled="disabled">1 Chambre</option>
                                  <option value="Single">1 Chambre</option>
                                  <option value="Double">2 Chambres</option>
                                  <option value="Deluxe">3 Chambres</option>
                                  <option value="More">Plus</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-lg-3 col-md-3 col-sm-3 icon_arrow">
                            <div class="input-group border-bottom-dark-2">
                                <select class="form-control" name="room" id="adult">
                                  <option selected="selected" disabled="disabled">1 Adulte</option>
                                  <option value="Single">1 Adulte</option>
                                  <option value="Double">2 Adultes</option>
                                  <option value="Deluxe">3 Adultes</option>
                                  <option value="More">Plus</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-lg-3 col-md-3 col-sm-3 icon_arrow">
                            <div class="input-group border-bottom-dark-2">
                                <select class="form-control" name="room" id="child">
                                  <option selected="selected" disabled="disabled">0 Enfant</option>
                                  <option value="Single">0 Enfant</option>
                                  <option value="Double">1 Enfant</option>
                                  <option value="Deluxe">2 Enfants</option>
                                  <option value="More">Plus</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <a class="btn btn-warning btn-md floatright">Trouver</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- end hotel booking -->